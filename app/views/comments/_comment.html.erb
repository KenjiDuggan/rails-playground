<div class="comment">
  <p><strong><%= comment.user.email_address %>:</strong> <%= comment.body %></p>

  <%= link_to 'Edit', edit_comment_path(comment), class: 'edit-comment-link' %>
  <%= link_to 'Delete', comment, method: :delete, data: { turbo_method: :delete, confirm: 'Are you sure?' } %>

  <% if comment.replies.any? %>
    <div class="replies">
      <%= render partial: 'comments/comment', collection: comment.replies, as: :comment %>
    </div>
  <% end %>
</div>
