<h1><%= @post.title %></h1>
<p><%= @post.body %></p>

<%= link_to 'Edit', edit_post_path(@post), class: 'edit-link' %> |
<%= link_to 'Back', posts_path, class: 'back-link' %> |
<%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'destroy-link' %>

<h2>Comments</h2>
<div class="comments">
  <%= render partial: 'comments/comment', collection: @post.comments.top_level, as: :comment %>
</div>
